<!-- Featured Articles -->
<section style="margin: var(--space-3xl) 0;">
  <div style="max-width: var(--content-width); margin: 0 auto;">
    <h2 style="text-align: center; margin-bottom: var(--space-2xl);">Latest Insights</h2>
    
    {% if collections.recentPosts.length > 0 %}
    <div class="post-grid">
      {% for post in collections.recentPosts %}
      <article class="post-card">
        <h3 style="margin-top: 0;">
          <a href="{{ post.url }}" style="text-decoration: none; color: var(--h3-color);">
            {{ post.data.title }}
          </a>
        </h3>
        <div class="article-meta">
          <time>{{ post.date | dateFormat }}</time>
          <span aria-hidden="true"> Â· </span>
          <span>{{ post.templateContent | readTime }}</span>
        </div>
        {% if post.data.description %}
        <p class="post-excerpt">{{ post.data.description }}</p>
        {% endif %}
        {% if post.data.tags and post.data.tags.length %}
        <div class="tags" style="margin-bottom: var(--space-lg);">
          {% for tag in post.data.tags %}
            {% if tag != "post" %}
            <span class="tag">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
        {% endif %}
        <a href="{{ post.url }}" class="btn btn-outline" style="font-size: 0.9rem;">Read Article</a>
      </article>
      {% endfor %}
    </div>
    {% else %}
    <!-- Placeholder for when no posts exist yet -->
    <div style="text-align: center; padding: var(--space-2xl); background-color: var(--surface); border-radius: 12px;">
      <h3>Coming Soon</h3>
      <p style="color: var(--text-muted);">We're preparing insightful articles on prompt engineering, AI communication strategies, and industry best practices. Check back soon!</p>
    </div>
    {% endif %}
    
    <div style="text-align: center; margin-top: var(--space-xl);">
      <a href="/articles/" class="btn btn-outline">View All Articles</a>
    </div>
  </div>
</section>

